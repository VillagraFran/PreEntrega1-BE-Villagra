<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand"></a>
        <a class="btn" href="https://ecomerce-villagra.onrender.com/">
            Volver al inicio
        </a>
  </div>
</nav>

<div class="container">
    {{#if cart.products}}
        {{#each cart.products}}
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="https://ecomerce-villagra.onrender.com/static/products/{{this.product.thumbnail}}" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{this.product.title}}</h5>
                            <p class="card-text"><small class="text-body-secondary">Precio: ${{this.product.price}} - Cantidad: {{this.quantity}}</small></p>
                        </div>
                    </div>
                    <div>
                        <form 
                            action="https://ecomerce-villagra.onrender.com/api/carts/{{this.buyer}}/product/{{this.product._id}}" 
                            method="get"
                        >
                            <button type="submit" class="btn btn-danger">X</button>
                        </form>
                    </div>
                </div>
            </div>
        {{/each}}
        <div>
            <form action="https://ecomerce-villagra.onrender.com/api/carts/{{cart._id}}/purchase" method="post">
                <button class="btn btn-success" type="submit">comprar</button>
            </form>
        </div>
    {{else}}
        <h2>Su carrito esta vacio</h2>
    {{/if}}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
